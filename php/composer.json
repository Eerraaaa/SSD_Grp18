{
    "name": "ssd-group18/electraedge",
    "description": "Secure Software Development Project - ElectraEdge E-commerce Platform",
    "type": "project",
    "require": {
        "php": ">=8.2",
        "phpmailer/phpmailer": "^6.8"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "squizlabs/php_codesniffer": "^3.7",
        "phpmd/phpmd": "^2.15",
        "phpstan/phpstan": "^1.10",
        "enlightn/security-checker": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage/",
        "cs": "phpcs --standard=PSR12 .",
        "cs-fix": "phpcbf --standard=PSR12 php/",
        "phpmd": "phpmd php/ text cleancode,codesize,controversial,design,naming,unusedcode",
        "phpstan": "phpstan analyse php/ --level=5",
        "security-check": "security-checker security:check composer.lock"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
